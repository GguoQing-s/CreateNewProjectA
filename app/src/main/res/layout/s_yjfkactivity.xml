<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/head3"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="11dp"
        android:id="@+id/tishi"
        android:padding="30dp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:text="请描述您在使用我们产品的过程中所遇到的问题或者建议，我们将时刻关注，不断优化，提供更好的用户体验"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="top"
        android:hint="在这里填写您的意见或建议"
        android:id="@+id/jianyi"
        android:textSize="11dp"
        android:background="@drawable/bk5"
        />
    <TextView
        android:layout_width="match_parent"
        android:textSize="11dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tishi2"
        android:paddingLeft="30dp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:text="为了日后方便回复您，请留下您的联系方式"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/lxfs"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:hint="QQ/邮箱/手机号"
        android:textSize="11dp"
        android:background="@drawable/bk5"
        />
   <LinearLayout
       android:gravity="center"
       android:layout_marginTop="50dp"
       android:layout_width="match_parent"
       android:layout_height="50dp">
       <Button
           android:id="@+id/tijiao"
           android:layout_width="500dp"
           android:layout_height="30dp"
           android:background="@drawable/bk6"
           android:text="提交"
           android:textSize="15dp"
           android:textColor="#000"
           />
   </LinearLayout>
    <LinearLayout
        android:id="@+id/line"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:layout_height="match_parent">
            <View
                android:layout_width="300dp"
                android:id="@+id/v1"
                android:layout_height="1dp"
                android:background="#000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="联系我们"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent">
            <View
                android:id="@+id/v2"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#000"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/email"
            android:src="@drawable/email"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tel"
            android:layout_height="120dp"
            android:src="@drawable/tel"
            />
    </LinearLayout>
</LinearLayout>